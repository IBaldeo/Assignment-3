<%- include('../layouts/header') %>
<div class="container">
  <h1>Edit Workout</h1>
  <form action="/workouts/<%= workout._id %>?_method=PUT" method="POST">
     <!-- All required fields to edit -->
    <div class="mb-3">
      <label class="form-label">Title</label>
      <input name="title" class="form-control" value="<%= workout.title %>" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Type of Workout</label>
      <input name="type" class="form-control" value="<%= workout.type %>" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Date</label>
      <input type="date" name="date" class="form-control" value="<%= workout.date.toISOString().slice(0,10) %>">
    </div>
    <div class="mb-3">
      <label class="form-label">Duration (minutes)</label>
      <input type="number" min="1" name="durationMin" class="form-control" value="<%= workout.durationMin %>" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Calories burned</label>
      <input type="number" min="0" name="calories" class="form-control" value="<%= workout.calories %>">
    </div>
    <div class="mb-3">
      <label class="form-label">Notes</label>
      <textarea name="notes" class="form-control"><%= workout.notes %></textarea>
    </div>
    <button class="btn btn-primary">Save changes</button>
    <a class="btn btn-secondary" href="/workouts">Cancel</a>
  </form>
</div>
<%- include('../layouts/footer') %>
