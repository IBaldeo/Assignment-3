<%- include('../layouts/header') %>
<div class="container">
  <h1>Add Your Workout</h1>
  <form action="/workouts" method="POST">
    <!-- All required fields to create -->
    <div class="mb-3">
      <label class="form-label">Title</label>
      <input name="title" class="form-control" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Type of Workout</label>
      <select name="type" class="form-select" required>
        <option>Cardio</option>
        <option>Strength</option>
        <option>Yoga</option>
        <option>Other</option>
      </select>
    </div>
    <div class="mb-3">
      <label class="form-label">Date</label>
      <input type="date" name="date" class="form-control" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Duration (minutes)</label>
      <input type="number" min="1" name="durationMin" class="form-control" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Calories burned</label>
      <input type="number" min="0" name="calories" class="form-control">
    </div>
    <div class="mb-3">
      <label class="form-label">Notes</label>
      <textarea name="notes" class="form-control"></textarea>
    </div>
    <button class="btn btn-success">Create</button>
    <a class="btn btn-secondary" href="/workouts">Cancel</a>
  </form>
</div>
<%- include('../layouts/footer') %>
